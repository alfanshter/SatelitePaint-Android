<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MetodePembayaranActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@drawable/statuspembayaran"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Metode"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="29dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Pembayaran"
                android:textColor="@color/hijau"
                android:textFontWeight="700"
                android:textSize="29dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cektf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/kotakpembayaran"
            android:orientation="horizontal"
            android:weightSum="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/tfuncek"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@drawable/ic_baseline_circle_24" />

                <ImageView
                    android:id="@+id/tfcek"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:background="@drawable/ic_baseline_check_circle_24"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_mono_medium"

                    android:text="Transfer Bank"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="17dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="BCA 8620148181"
                    android:textColor="@color/blackabu"
                    android:textFontWeight="400"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="a/n Rio Kurniawan"
                    android:textColor="@color/blackabu"
                    android:textFontWeight="400"
                    android:textSize="14dp" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/iconbca" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cekcod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/kotakpembayaran"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/cektf">

            <ImageView
                android:id="@+id/coduncek"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_circle_24" />

            <ImageView
                android:id="@+id/codcek"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_check_circle_24"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="COD / Bayar Ditempat"
                android:textColor="@color/black"
                android:textFontWeight="700"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cekcicilan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/kotakpembayaran"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="3"
            app:layout_constraintTop_toBottomOf="@+id/cekcod">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/cicilanuncek"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_circle_24" />

                <ImageView
                    android:id="@+id/cicilancek"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_check_circle_24"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_mono_medium"
                    android:text="Cicilan"
                    android:textColor="@color/black"
                    android:textFontWeight="700"
                    android:textSize="17dp" />
            </LinearLayout>

            <RadioGroup
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/radiocicilan"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cicilan 1X"
                    android:id="@+id/radiocicilan1x"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cicilan 2X"
                    android:id="@+id/radiocicilan2x"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cicilan 3X"
                    android:id="@+id/radiocicilan3x"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cicilan 4X"
                    android:id="@+id/radiocicilan4x"
                    />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="COD / Bayar Ditempat"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@+id/cekcicilan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:id="@+id/view_camera"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/cekcod"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/btnuploadfoto"
                android:background="@drawable/btncamera"
                app:layout_constraintTop_toBottomOf="@+id/textView3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_baseline_camera_enhance_24"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="105dp"
                android:id="@+id/imgfoto"
                android:layout_marginLeft="20dp"
                android:layout_height="120dp"
                android:background="@mipmap/ic_launcher"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnselanjutnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Selanjutnya"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/hijau"
            app:cornerRadius="9dp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </LinearLayout>

</ScrollView>