<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/putihtulang"
    app:cardBackgroundColor="@color/hijautulang"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jatuh Tempo : 2022-02-21"
            android:id="@+id/txtjatuhtempo"
            android:textColor="@color/hijau"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtnomorpesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_mono"
            android:text="Nomor pesanan : "
            android:textColor="@color/hitampuket"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txtcicilanke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Cicilan ke : "
            android:textColor="@color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/txtjumlahbayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Jumlah bayar : "
            android:textColor="@color/black"
            android:textSize="13dp" />
        <TextView
            android:id="@+id/txtketerangan"
            android:layout_width="match_parent"
            android:gravity="end"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Terbayar"
            android:textColor="@color/black"
            android:textSize="13dp" />
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>