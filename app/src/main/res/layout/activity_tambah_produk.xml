            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/hijau"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Simpan"
            android:textAllCaps="false"
